<tal:available condition="view/available">
<tal:block i18n:domain="plone" define="content_obj view/content_obj" condition="content_obj">
<dl class="portlet portletContentProxy">
  <dt class="portletHeader hiddenStructure'">
    <span class="portletTopLeft"></span>
    <span class="portletTopRight"></span>
  </dt>
  <dd class="portletItem lastItem"
      tal:define="dummy python:request.set('show_title', view.data.show_title);
                  dummy python:request.set('link_title', view.data.link_title);
                  dummy python:request.set('show_content', view.data.show_content)">

    <tal:item replace="structure content_obj/@@fullview_item" />

    <span class="portletBottomLeft"></span>
    <span class="portletBottomRight"></span>
  </dd>
</dl>
</tal:block>
</tal:available>
