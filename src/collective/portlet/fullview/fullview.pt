<tal:block i18n:domain="plone" tal:define="content_obj view/content_obj" tal:condition="content_obj">
<dl class="portlet portletContentProxy">
  <dt class="portletHeader hiddenStructure'">
    <span class="portletTopLeft"></span>
    <span class="portletTopRight"></span>
  </dt>
  <dd class="portletItem lastItem"
      tal:define="dummy python:request.set('show_title', view.data.show_title);
                  dummy python:request.set('link_title', view.data.link_title);
                  dummy python:request.set('show_content', view.data.show_content)">

    <tal:item tal:replace="structure content_obj/@@fullview_item" />

    <span class="portletBottomLeft"></span>
    <span class="portletBottomRight"></span>
  </dd>
</dl>
</tal:block>
